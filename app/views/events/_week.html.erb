<%= week_calendar(events: @events) do |date, events| %>
  <div class="card shadow bg-gradient-secondary">
    <div class="card-header position-relative">
      <time datetime="<%= date.strftime('%Y-%m-%d') %>" class="font-monospace"><%= date %></time>
    </div>

    <ul class="list-group list-group-flush">
      <% events.each do |event| %>
        <%= tag.li class: "list-group-item", data: { start_time: event.start_time.to_i, end_time: event.end_time.to_i } do %>
          <%= event.name %>
          <% unless event.description.blank? %>
            <a href="javascript:void()" class="px-1" data-bs-toggle="popover" data-bs-title="<%= event.name %>" data-bs-content="<%= event.description %>">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
            </a>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>