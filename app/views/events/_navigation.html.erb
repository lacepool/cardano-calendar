<div class="calendar-heading fs-3 mb-5 text-center">
  <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title px-3"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></time>

  <nav class="btn-group" role="group">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), url_for_previous_view, class: "btn btn-md btn-primary" %>
    <%= link_to t('simple_calendar.today', default: 'Today'), url_for_today_view, class: "btn btn-md btn-primary" %>
    <%= link_to t('simple_calendar.next', default: 'Next'), url_for_next_view, class: "btn btn-md btn-primary" %>

    <button class="btn btn-primary" type="button" data-controller="filters" data-filters-target="events" data-bs-toggle="offcanvas" data-bs-target="#event_settings" aria-controls="event_settings">
      <i class="bi bi-sliders"></i>
    </button>
  </nav>
</div>
